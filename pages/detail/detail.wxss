/* pages/detail/detail.wxss */
page {
  display: flex;
  flex-direction: column;
  height: 100%;
}
/* 直接设置swiper属性 */
swiper {
  height: 700rpx;
}
swiper-item image {
  width: 100%;
  height: 100%;
}
.detail {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  margin-bottom: 0rpx;
}
.detail .title {
  font-size: 40rpx;
  margin-left: 15rpx;
  color: #000000;
  text-align: justify;
}
.detail .price {
  color: #ff6633;
  font-size: 40rpx;
  margin: 10rpx;
}
.detail .desc {
  margin-left: 15rpx;
  font-size: 40rpx;
  margin: 10rpx;
}
.detail .imgtail {
  margin-left: 15rpx;
  font-size: 40rpx;
  margin: 10rpx;
}
.color{
  /* color:orange; */
  background-color: orange;
}


.detail-nav {
 display: flex;
 flex-direction: row;
 align-items: center;
 float: left;
 background-color: #fff;
 position: fixed;
 bottom: 0;
 right: 0;
 z-index: 1;
 width: 100%;
 height: 100rpx;
}
.button-orange {
 background-color: orange; /* Orange */
 width:10rpx;
 height: 100rpx;
 font-size: 30rpx;
 margin-left: 10rpx;
 margin-right: 10rpx;
}
.button-red {
 background-color: #f44336; /* 红色 */
 width:10rpx;
 height: 100rpx;
 font-size: 30rpx;
  margin-left: 10rpx;
 margin-right: 10rpx;
}

button {
 color: white;
 text-align: center;
 text-decoration: none;
 display: inline-block;
 font-size: 30rpx;
 border-radius: 0rpx;
 width: 50%;
 height: 100%;
 line-height: 100rpx;
}

.line_nav {
 width: 5rpx;
 height: 100%;
 background-color: gainsboro;
 margin-left: 20rpx;
 margin-right: 20rpx;

}

.ziti {
  font-size: 20rpx;
  margin-top: 60rpx;

}
